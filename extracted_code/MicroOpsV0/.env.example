NODE_ENV=development
PORT=4000

# Database (choose a full URL or host/user/password parts)
DATABASE_URL=
DB_HOST=localhost
DB_PORT=5432
DB_NAME=microops_erp
DB_USER=microops
DB_PASSWORD=devpassword

# JWT signing secret (server-only; do not expose to frontend)
JWT_SECRET=please-change-this-secret
JWT_EXPIRES_IN=2h

# CORS whitelist (no spaces)
CORS_ORIGINS=http://localhost:4000,http://localhost:5173

# Logging
LOG_LEVEL=info
LOG_DIR=./logs
LOG_RETENTION_DAYS=30

# Backups (pg_dump)
BACKUP_ENABLED=true
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=14

# Public, non-sensitive values
APP_NAME=MicroOps ERP
APP_VERSION=0.5.0-dev
APP_ENV=local
APP_DEMO_MODE=false
